{
    "$schema": "https://json.schemastore.org/template",
    "author": "Vijay Anand E G",
    "defaultName": "MauiItem1",
    "classifications": [
        "MAUI",
        "Android",
        "iOS",
        "macOS",
        "Windows",
        "Xaml"
    ],
    "identity": "VijayAnand.MauiItem",
    "groupIdentity": "VijayAnand.MauiTemplates.Item.Xaml",
    "description": "An item template for .NET MAUI Item in XAML",
    "name": ".NET MAUI Item",
    "shortName": "maui-item",
    "sourceName": "MauiItem.1",
    "primaryOutputs": [
        {
            "path": "MauiItem.1.xaml"
        },
        {
            "condition": "(!XamlOnly)",
            "path": "MauiItem.1.xaml.cs"
        }
    ],
    "tags": {
        "language": "C#",
        "type": "item"
    },
    "symbols": {
        "root_namespace": {
            "type": "bind",
            "binding": "msbuild:RootNamespace",
            "replaces": "MyApp.RootNamespace"
        },
        "proj_dir": {
            "type": "bind",
            "binding": "msbuild:MSBuildProjectDirectory"
        },
        "output_path": {
            "type": "bind",
            "binding": "WorkingDirectory",
            "defaultValue": ""
        },
        "RootFolder": {
            "type": "computed",
            "datatype": "bool",
            "value": "(output_path == \"\" || proj_dir == output_path)"
        },
        "relative_path": {
            "type": "generated",
            "generator": "regex",
            "datatype": "text",
            "parameters": {
                "source": "output_path",
                "steps": [
                    {
                        "regex": ".*(\\\\|/)",
                        "replacement": ""
                    }
                ]
            }
        },
        "namespace": {
            "type": "generated",
            "generator": "join",
            "parameters": {
                "symbols": [
                    {
                        "type": "ref",
                        "value": "root_namespace"
                    },
                    {
                        "type": "ref",
                        "value": "relative_path"
                    }
                ],
                "separator": ".",
                "removeEmptyValues": true
            },
            "replaces": "MyApp.Namespace"
        },
        "base": {
            "isRequired": true,
            "type": "parameter",
            "description": "Base type for the item.",
            "datatype": "text",
            "replaces": "ContentPage"
        },
        "generic": {
            "type": "parameter",
            "description": "Generic base type for the item.",
            "datatype": "text",
            "defaultValue": "",
            "replaces": "TObject"
        },
        "xaml-only": {
            "type": "parameter",
            "datatype": "bool",
            "default": "false",
            "description": "If true, the output is generated without a C# code-behind file."
        },
        "global-namespace": {
            "type": "parameter",
            "datatype": "bool",
            "default": "false",
            "description": "If true, the output is generated with .NET MAUI 10 global namespace."
        },
        "implicit-namespace": {
            "type": "parameter",
            "datatype": "bool",
            "default": "false",
            "description": "If true, the output is generated with .NET MAUI 10 implicit namespace."
        },
        "GlobalNamespace": {
            "type": "computed",
            "value": "(global-namespace)"
        },
        "ImplicitNamespace": {
            "type": "computed",
            "value": "(implicit-namespace)"
        },
        "TypeRename": {
            "type": "derived",
            "valueSource": "base",
            "valueTransform": "ValueWithoutScope",
            "replaces": "ContentView"
        },
        "ContextRename": {
            "type": "derived",
            "valueSource": "generic",
            "valueTransform": "ValueWithoutScope",
            "replaces": "TContext"
        },
        "IsGeneric": {
            "type": "computed",
            "value": "(generic != \"\")"
        },
        "XamlOnly": {
            "type": "computed",
            "value": "(xaml-only)"
        },
        "Xmlns": {
            "type": "derived",
            "valueSource": "base",
            "valueTransform": "Scope"
        },
        "Toolkit": {
            "type": "computed",
            "value": "(Xmlns == \"mct\")"
        }
    },
    "forms": {
        "ValueWithoutScope": {
            "identifier": "replace",
            "pattern": "^.*\\:(?=[^\\:]+$)",
            "replacement": ""
        },
        "Scope": {
            "identifier": "replace",
            "pattern": "\\:?\\w+$",
            "replacement": ""
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(XamlOnly)",
                    "exclude": [
                        "MauiItem.1.xaml.cs"
                    ]
                }
            ]
        }
    ],
    "constraints": {
        "dotnet7-sts": {
            "type": "sdk-version",
            "args": [
                "[7.0,)"
            ]
        },
        "csharp-only": {
            "type": "project-capability",
            "args": "CSharp"
        }
    }
}
