<?xml version="1.0" encoding="UTF-8" ?>
<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;MAUI_TFM</TargetFrameworks>
        <Nullable>enable</Nullable>
        <LangVersion>latest</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <RootNamespace>SharedClassLib._1</RootNamespace>
        <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    </PropertyGroup>

    <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
        <DefineConstants>$(DefineConstants);FORMS</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition="'$(TargetFramework)' == 'MAUI_TFM'">
        <UseMaui>true</UseMaui>
        <SingleProject>true</SingleProject>
        <DefineConstants>$(DefineConstants);MAUI</DefineConstants>
    </PropertyGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
        <Compile Include="**\*.shared.cs;**\*.logic.cs;**\*.forms.cs" />
        <None Include="**\*.maui.cs" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'MAUI_TFM'">
        <Compile Include="**\*.shared.cs;**\*.logic.cs;**\*.maui.cs" />
        <None Include="**\*.forms.cs" />
    </ItemGroup>

    <!-- Xamarin.Forms NuGet packages -->
    <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
        <PackageReference Include="Xamarin.Forms" Version="5.0.0.*" />
        <!--#if (AddFormsEssentials)-->
        <PackageReference Include="Xamarin.Essentials" Version="1.8.*" />
        <!--#endif-->
        <!--#if (AddFormsToolkit)-->
        <PackageReference Include="Xamarin.CommunityToolkit" Version="2.0.*" />
        <!--#endif-->
        <!--#if (AddFormsMarkup)-->
        <PackageReference Include="Xamarin.CommunityToolkit.Markup" Version="2.0.*" />
        <!--#endif-->
        <!--#if (AddSharedToolkit)-->
        <!--#if (Net8)-->
        <PackageReference Include="VijayAnand.Toolkit.Markup" Version="3.0.0-preview.1" />
        <!--#elif (Net7)-->
        <PackageReference Include="VijayAnand.Toolkit.Markup" Version="2.1.0-preview.1" />
        <!--#else-->
        <PackageReference Include="VijayAnand.Toolkit.Markup" Version="1.1.0-preview.1" />
        <!--#endif-->
        <!--#endif-->
    </ItemGroup>

    <!--#if (Net8 || AddMauiToolkit || AddMauiMarkup)-->
    <!-- .NET MAUI NuGet packages -->
    <ItemGroup Condition="'$(TargetFramework)' == 'MAUI_TFM'">
    <!--#endif-->
        <!--#if (Net8)-->
        <PackageReference Include="Microsoft.Maui.Controls" Version="$(MauiVersion)" />
        <PackageReference Include="Microsoft.Maui.Controls.Compatibility" Version="$(MauiVersion)" />
        <!--#endif-->
        <!--#if (AddMauiToolkit)-->
        <!--#if (Net7OrLater)-->
        <PackageReference Include="CommunityToolkit.Maui" Version="6.*"/>
        <!--#else-->
        <PackageReference Include="CommunityToolkit.Maui" Version="2.0.*"/>
        <!--#endif-->
        <!--#endif-->
        <!--#if (AddMauiMarkup)-->
        <!--#if (Net7OrLater)-->
        <PackageReference Include="CommunityToolkit.Maui.Markup" Version="3.*" />
        <!--#else-->
        <PackageReference Include="CommunityToolkit.Maui.Markup" Version="1.2.*" />
        <!--#endif-->
        <!--#endif-->
        <!--#if (AddSharedToolkit)-->
        <!--#if (Net8)-->
        <PackageReference Include="VijayAnand.Toolkit.Markup" Version="3.0.0-preview.1" />
        <!--#elif (Net7)-->
        <PackageReference Include="VijayAnand.Toolkit.Markup" Version="2.1.0-preview.1" />
        <!--#else-->
        <PackageReference Include="VijayAnand.Toolkit.Markup" Version="1.1.0-preview.1" />
        <!--#endif-->
        <!--#endif-->
    <!--#if (Net8 || AddMauiToolkit || AddMauiMarkup)-->
    </ItemGroup>

    <!--#endif-->
    <!--#if (AddMvvmToolkit)-->
    <!-- Common NuGet packages -->
    <ItemGroup>
        <PackageReference Include="CommunityToolkit.Mvvm" Version="8.*" />
    </ItemGroup>
    <!--#endif-->

</Project>
