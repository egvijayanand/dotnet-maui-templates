{
    "$schema": "https://json.schemastore.org/template",
    "author": "Vijay Anand E G",
    "defaultName": "MauiResDict1",
    "classifications": [
        "MAUI",
        "Android",
        "iOS",
        "macOS",
        "Windows",
        "Xaml"
    ],
    "identity": "VijayAnand.MauiResDict",
    "groupIdentity": "VijayAnand.MauiTemplates.ResDict",
    "description": "An item template for .NET MAUI Resource Dictionary in XAML",
    "name": ".NET MAUI ResourceDictionary",
    "shortName": "maui-resdict",
    "sourceName": "MauiResDict.1",
    "primaryOutputs": [
        {
            "path": "MauiResDict.1.xaml"
        },
        {
            "condition": "(!XamlOnly)",
            "path": "MauiResDict.1.xaml.cs"
        }
    ],
    "tags": {
        "language": "C#",
        "type": "item"
    },
    "symbols": {
        "root_namespace": {
            "type": "bind",
            "binding": "msbuild:RootNamespace",
            "replaces": "MyApp.RootNamespace"
        },
        "proj_dir": {
            "type": "bind",
            "binding": "msbuild:MSBuildProjectDirectory"
        },
        "output_path": {
            "type": "bind",
            "binding": "WorkingDirectory",
            "defaultValue": ""
        },
        "RootFolder": {
            "type": "computed",
            "datatype": "bool",
            "value": "(output_path == \"\" || proj_dir == output_path)"
        },
        "relative_path": {
            "type": "generated",
            "generator": "regex",
            "datatype": "text",
            "parameters": {
                "source": "output_path",
                "steps": [
                    {
                        "regex": ".*(\\\\|/)",
                        "replacement": ""
                    }
                ]
            }
        },
        "namespace": {
            "type": "generated",
            "generator": "join",
            "parameters": {
                "symbols": [
                    {
                        "type": "ref",
                        "value": "root_namespace"
                    },
                    {
                        "type": "ref",
                        "value": "relative_path"
                    }
                ],
                "separator": ".",
                "removeEmptyValues": true
            },
            "replaces": "MyApp.Namespace"
        },
        "no-code-behind": {
            "type": "parameter",
            "datatype": "bool",
            "default": "false",
            "description": "If true, the output is generated without a C# code-behind file."
        },
        "xaml-only": {
            "type": "parameter",
            "datatype": "bool",
            "default": "false",
            "description": "If true, the output is generated without a C# code-behind file."
        },
        "global-namespace": {
            "type": "parameter",
            "datatype": "bool",
            "default": "false",
            "description": "If true, the output is generated with .NET MAUI 10 global namespace."
        },
        "implicit-namespace": {
            "type": "parameter",
            "datatype": "bool",
            "default": "false",
            "description": "If true, the output is generated with .NET MAUI 10 implicit namespace."
        },
        "GlobalNamespace": {
            "type": "computed",
            "value": "(global-namespace)"
        },
        "ImplicitNamespace": {
            "type": "computed",
            "value": "(implicit-namespace)"
        },
        "NoCodeBehind": {
            "type": "computed",
            "value": "(no-code-behind)"
        },
        "XamlOnly": {
            "type": "computed",
            "value": "(xaml-only)"
        }
    },
    "sources": [
        {
            "modifiers": [
                {
                    "condition": "(NoCodeBehind || XamlOnly)",
                    "exclude": [
                        "MauiResDict.1.xaml.cs"
                    ]
                }
            ]
        }
    ],
    "constraints": {
        "dotnet7-sts": {
            "type": "sdk-version",
            "args": [
                "[7.0,)"
            ]
        },
        "csharp-only": {
            "type": "project-capability",
            "args": "CSharp"
        }
    }
}
