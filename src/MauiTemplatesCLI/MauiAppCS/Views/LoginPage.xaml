<?xml version="1.0" encoding="UTF-8" ?>
<!--#if (Mvvm)-->
<!--#if (Net10OrLater)-->
<ContentPage
    x:Class="MauiApp._1.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/maui/global"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/maui/global/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Shell.NavBarIsVisible="False"
    x:DataType="LoginViewModel"
    mc:Ignorable="d">
<!--#else-->
<ContentPage
    x:Class="MauiApp._1.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MauiApp._1"
    xmlns:vm="clr-namespace:MauiApp._1.ViewModels"
    Shell.NavBarIsVisible="False"
    x:DataType="vm:LoginViewModel"
    mc:Ignorable="d">
<!--#endif-->
    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <!--#if (CompiledBindings)-->
            <Button
                Command="{x:Bind LoginCommand}"
                Style="{StaticResource PrimaryAction}"
                Text="Login" />
            <!--#else-->
            <Button
                Command="{Binding LoginCommand}"
                Style="{StaticResource PrimaryAction}"
                Text="Login" />
            <!--#endif-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<!--#else-->
<!--#if (Net10OrLater)-->
<ContentPage
    x:Class="MauiApp._1.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/maui/global"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/maui/global/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Shell.NavBarIsVisible="False"
    mc:Ignorable="d">
<!--#else-->
<ContentPage
    x:Class="MauiApp._1.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MauiApp._1"
    Shell.NavBarIsVisible="False"
    mc:Ignorable="d">
<!--#endif-->
    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Button
                Clicked="OnLoginClicked"
                Style="{StaticResource PrimaryAction}"
                Text="Login" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<!--#endif-->
