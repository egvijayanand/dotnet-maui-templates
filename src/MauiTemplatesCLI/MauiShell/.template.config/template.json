{
    "$schema": "https://json.schemastore.org/template",
    "author": "Vijay Anand E G",
    "defaultName": "AppShell",
    "classifications": [
        "MAUI",
        "Android",
        "iOS",
        "macOS",
        "Mac Catalyst",
        "WinUI",
        "Windows",
        "Shell"
    ],
    "identity": "VijayAnand.MauiShell",
    "groupIdentity": "VijayAnand.MauiTemplates.Shell",
    "description": "An item template for .NET MAUI ShellPage in XAML",
    "name": ".NET MAUI ShellPage",
    "shortName": "maui-shell",
    "sourceName": "MauiShell.1",
    "primaryOutputs": [
        {
            "path": "MauiShell.1Shell.xaml"
        },
        {
            "path": "MauiShell.1Shell.xaml.cs"
        }
    ],
    "tags": {
        "language": "C#",
        "type": "item"
    },
    "symbols": {
        "root_namespace": {
            "type": "bind",
            "binding": "msbuild:RootNamespace",
            "replaces": "MyApp.RootNamespace"
        },
        "proj_dir": {
            "type": "bind",
            "binding": "msbuild:MSBuildProjectDirectory"
        },
        "output_path": {
            "type": "bind",
            "binding": "WorkingDirectory",
            "defaultValue": ""
        },
        "RootFolder": {
            "type": "computed",
            "datatype": "bool",
            "value": "(output_path == \"\" || proj_dir == output_path)"
        },
        "relative_path": {
            "type": "generated",
            "generator": "regex",
            "datatype": "text",
            "parameters": {
                "source": "output_path",
                "steps": [
                    {
                        "regex": ".*(\\\\|/)",
                        "replacement": ""
                    }
                ]
            }
        },
        "namespace": {
            "type": "generated",
            "generator": "join",
            "parameters": {
                "symbols": [
                    {
                        "type": "ref",
                        "value": "root_namespace"
                    },
                    {
                        "type": "ref",
                        "value": "relative_path"
                    }
                ],
                "separator": ".",
                "removeEmptyValues": true
            },
            "replaces": "MyApp.Namespace"
        },
        "global-namespace": {
            "type": "parameter",
            "datatype": "bool",
            "default": "false",
            "description": "If true, the output is generated with .NET MAUI 10 global namespace."
        },
        "implicit-namespace": {
            "type": "parameter",
            "datatype": "bool",
            "default": "false",
            "description": "If true, the output is generated with .NET MAUI 10 implicit namespace."
        },
        "no-comments": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Option to remove comments.",
            "displayName": "Option to remove comments"
        },
        "AddComments": {
            "type": "computed",
            "value": "(!no-comments)"
        },
        "GlobalNamespace": {
            "type": "computed",
            "value": "(global-namespace)"
        },
        "ImplicitNamespace": {
            "type": "computed",
            "value": "(implicit-namespace)"
        }
    },
    "constraints": {
        "dotnet7-sts": {
            "type": "sdk-version",
            "args": [
                "[7.0,)"
            ]
        },
        "csharp-only": {
            "type": "project-capability",
            "args": "CSharp"
        }
    }
}
